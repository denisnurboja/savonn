
<xml version="1.0" encoding="UTF-8">



<% @products.order("special_offer DESC").each do |product| %>
  <PRODUCT>
		<CODE><%= product.code %></CODE>
		<NAME><%= product.name %></NAME>
		<DESCRIPTION><%= product.short_description %></DESCRIPTION>
		<RETAILPRICE>
			<%= product.retailprice.to_i %>
			
		</RETAILPRICE>
		<IMAGE><%= product.image_url %></IMAGE>
  </PRODUCT>
<% end %>
</xml>
